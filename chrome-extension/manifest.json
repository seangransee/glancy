{
  "name": "Article Length Glance",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Lets you glance at the lengths of every article on the page. Currently supports Hacker News.",
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "content_scripts": [ {
    "js": [ "jquery.min.js", "main.js" ],
    "css": ["styles.css"],
    "matches": [ "*://news.ycombinator.com/*"]
  } ],
  "page_action": {
    "default_title": "Toggle Glancer color",
    "default_icon": "icons/default_19.gif"
  },
  "permissions": [
    "tabs",
    "*://news.ycombinator.com/*"
  ],
  "icons": {
    "16": "icons/default_16.gif",
    "48": "icons/default_48.gif",
    "128": "icons/default_128.gif"
  }
}