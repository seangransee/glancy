{
  "name": "Glancy",
  "version": "0.2.4",
  "manifest_version": 2,
  "description": "Lets you glance at the lengths of every article on the page. Currently supports Hacker News, Reddit, The New York Times, and more.",
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "content_scripts": [ {
    "js": [ "jquery.min.js", "main.js" ],
    "css": ["styles.css"],
    "matches": [
      "*://news.ycombinator.com/*",
      "*://www.reddit.com/*",
      "*://www.washingtonpost.com/*",
      "*://www.nytimes.com/*"
    ]
  } ],
  "page_action": {
    "default_title": "Toggle Glancy color",
    "default_icon": {
      "19": "icons/logo_19.png",
      "38": "icons/logo_38.png"
    }
  },
  "permissions": [
    "tabs",
    "*://news.ycombinator.com/*",
    "*://www.reddit.com/*",
    "*://www.washingtonpost.com/*",
    "*://www.nytimes.com/*"
  ],
  "icons": {
    "16": "icons/logo_16.png",
    "48": "icons/logo_48.png",
    "128": "icons/logo_128.png"
  }
}